{{#partial "title"}}Indicadores{{/partial}}

{{#partial "presentacion"}}
	<h3>Evaluar indicadores cargados en el sistema</h3>
{{/partial}}

{{#partial "ruta-formulario"}}
	"/indicadores/tabla"
{{/partial}}

{{#partial "tabla"}}
	<table class="table table-striped">
  		<thead>
    		<tr>
      			<th>Indicador</th>
     			 <th>Valor</th>
    		</tr>
		</thead>
	
	    <tbody>
	    	{{#each indicadores}}
		    	<tr>
	        		<td>{{nombre}}</td>
	        		<td>{{valorString}}</td>
		    	</tr>
	       	{{/each}}
	  	</tbody>
	  	
	</table>
	<h3>Cree un nuevo indicador</h3>
	<br/>
	<form method="POST" action="/indicadores" name="form-indicador">
		<div class="form-row">
			<div class="form-group col-4">
				<label for="nuevoIndicador">Introduzca un nuevo indicador:</label>
				<input type="text" name="nuevoIndicador" class="form-control" id="nuevoIndicador" placeholder="Nombre = EcuaciÃ³n" required autofocus></input>
			</div>
		</div>
		<button type="submit" class="btn btn-md btn-primary">Agregar</button>
	</form> 

{{/partial}}
