{{#partial "title"}}Indicadores{{/partial}}

{{#partial "body"}}
	<h3>Evaluar indicadores cargados en el sistema</h3>
	<br />
	<form method="POST" action="/indicadores" name="form-indicadores" class="form-inline">
		<div class="form-row">
		
			<div class="form-group">
				<label for="empresa-select">Seleccione una empresa:</label>
					<select class="form-control col-3" id="empresa-select">
						<option>1</option>
						<option>2</option>
						<option>3</option>
					</select>
			</div>
			
			<div class="form-group">
				<label for="periodo-select">Seleccione un periodo:</label>
				<select class="form-control col-3" id="periodo-select">
					<option>1</option>
					<option>2</option>
					<option>3</option>
				</select>
			</div>
	
			<button type="submit" class="btn btn-md btn-primary">Buscar</button>
			
		</div>
	</form> 
	<table class="table table-striped">
		<thead>
    		<tr>
      			<th style="width:10px">#</th>
			    <th>Indicador</th>
			    <th>Valor</th>
			</tr>
		</thead>
		
		<tbody>
		    <tr>
				<th scope="row">1</th>
		      	<td>Holis</td>
		      	<td>1</td>
		    </tr>
    		<tr>
		        <th scope="row">2</th>
		     	<td>Holis</td>
		     	<td>2</td>
		    </tr>
    		<tr>
			     <th scope="row">3</th>
			     <td>Holis</td>
			     <td>3</td>
			</tr>
  		</tbody>
	</table>
	
{{/partial}}
{{>layout.hbs}}

