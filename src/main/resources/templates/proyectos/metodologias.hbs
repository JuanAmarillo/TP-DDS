{{#partial "title"}}Metodologias{{/partial}}

{{#partial "body"}}
	<h3>Evaluar metodolog√≠as cargadas en el sistema</h3>
	<br />
	<form method="POST" action="/metodologias" name="form-metodologias" class="form-inline">
		<div class="form-row">
		
			<div class="form-group">
				<label for="metodologia-select">Seleccione una metodologia:</label>
					<select class="form-control col-3" name="metodologias">
						{{#each metodologias}}
							<option>{{nombre}}</option>
						{{/each}}						
					</select>
			</div>
						
			<button type="submit" class="btn btn-md btn-primary">Evaluar</button>
			
		</div>
	</form> 
	<div class="col-6">
	<table class="table table-striped">
		<thead>
    		<tr>
      			<th style="width:10px">#</th>
			    <th>Empresa</th>			    
			</tr>
		</thead>
		
		<tbody>
			{{#each empresasOrdenadas}}
		    <tr>
				<th>Nombre</th>
		    </tr>
		    {{/each}}
    	</tbody>
	</table>
	</div>
	
{{/partial}}
