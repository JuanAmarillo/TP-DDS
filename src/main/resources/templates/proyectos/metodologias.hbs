{{#partial "title"}}Metodologias{{/partial}}

{{#partial "body"}}
	<h3>Evaluar metodolog√≠as cargadas en el sistema</h3>
	<br />
	<form method="POST" action="/metodologias" name="form-metodologias" class="form-inline">
		<div class="form-row">
		
			<div class="form-group">
				<label for="metodologia-select">Seleccione una metodologia:</label>
					<select class="form-control col-3" name="metodologias" required>
							<option></option>
						{{#each metodologias}}
							<option>{{nombre}}</option>
						{{/each}}						
					</select>
			</div>
						
			<button type="submit" class="btn btn-md btn-primary">Evaluar</button>
			
		</div>
	</form> 
	{{#if empresasordenadas.length}}
	<div >
	<br />
	<br />
	<ol>
		<label > Empresas ordenadas </label>
			{{#each empresasOrdenadas}}
				<li>{{Nombre}}</li>
		    {{/each}}
	</ol>
	<ol>
		<label > Empresas eliminadas por la metodologia </label>
			{{#each empresasEliminadas}}
				<li>{{Nombre}}</li>
		    {{/each}}
	</ol>
	</div>
	{{/if}}
	
	
{{/partial}}
{{>layout.hbs}}
