{{#partial "title"}}Cuentas{{/partial}}

{{#partial "body"}}

	<h3>Cuentas de las empresas cargadas en el sistema</h3>
	<br />
	<form method="POST" action="/cuentas" name="form-cuentas" class="form-inline">
		<div class="form-row">
	
			<div class="form-group">
				<label for="empresa-select">Seleccione una empresa:</label>
				<select class="form-control col-6" id="empresa-select">
					<option>{{this}}</option>
					<option>2</option>
					<option>3</option>
				</select>
			</div>
	
			<div class="form-group">
				<label for="periodo-select">Seleccione un periodo:</label>
				<select class="form-control col-3" id="periodo-select">
					<option>1</option>
					<option>2</option>
					<option>3</option>
				</select>
			</div>
		
			<button type="submit" class="btn btn-md btn-primary">Buscar</button>
	
		</div>
	</form> 
	
	<table class="table table-striped">
  		<thead>
    		<tr>
      			<th>#</th>
      			<th>Cuenta</th>
     			 <th>Valor</th>
    		</tr>
		</thead>
	
	    <tbody>
	    	<tr>
	       		<th scope="row">1</th>
	        	<td>Holis</td>
	        	<td>1</td>
	        </tr>
	    	<tr>
	     		<th scope="row">2</th>
	     	    <td>Holis</td>
	      	    <td>2</td>
	    	</tr>
	    	<tr>
	      		<th scope="row">3</th>
	      		<td>Holis</td>
	      		<td>3</td>
	    	</tr>
	  	</tbody>
	  	
	</table>
{{/partial}}
{{>layout.hbs}}